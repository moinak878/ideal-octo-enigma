#include<fstream.h>
#include<iomanip.h>
#include<stdio.h>
#include<conio.h>
#include<string.h>


//***************************************************************
//                   CLASS USED IN PROJECT
//****************************************************************

int counter=11;

class student
{
	int rollno;
	char name[50];
	int p_marks, c_marks, m_marks, e_marks, cs_marks;
	float per;
	char grade;
	void calculate();	//function to calculate grade
public:
	void getdata();		//function to accept data from user
	void showdata();	//function to show data on screen
	void show_tabular();
	int retrollno();
}; //class ends here



//***************************************************************
//                function declarations
//****************************************************************


void write_student();      //write the record in binary file
void display_all();	   //read all records from binary file
void display_sp(int);      //accept rollno and read record from binary file
void modify_student(int);  //accept rollno and update record of binary file
void delete_student(int);  //accept rollno and delete selected records from binary file
void class_result();       //display all records in tabular format from binary file
void result();		   //display result menu
void intro();		   //display welcome screen
void entry_menu();	   //display entry menu on screen
int display();             //graphics functions




void student::calculate()
{
	per=(p_marks+c_marks+m_marks+e_marks+cs_marks)/5.0;
	if(per>=80)
		grade='A';
	else if(per>=50)
		grade='B';
	else if(per>=33)
		grade='C';
	else
		grade='F';
}

void student::getdata()
{
	clrscr();
	display();
	textcolor(RED);
	gotoxy(7,6);
	cout<<"Enter The roll number of student : ";
	cin>>rollno;
	gotoxy(7,8);
	cout<<"Enter The Name of student : ";
	gets(name);
	gotoxy(7,10);
	cout<<"Enter The marks in physics out of 100 : ";
	cin>>p_marks;
	gotoxy(7,12);
	cout<<"Enter The marks in chemistry out of 100 : ";
	cin>>c_marks;
	gotoxy(7,14);
	cout<<"Enter The marks in maths out of 100 : ";
	cin>>m_marks;
	gotoxy(7,16);
	cout<<"Enter The marks in english out of 100 : ";
	cin>>e_marks;
	gotoxy(7,18);
	cout<<"Enter The marks in computer science out of 100 : ";
	cin>>cs_marks;
	calculate();
}

void student::showdata()
{
	cout<<"\nRoll number of student : "<<rollno;
	cout<<"\nName of student : "<<name;
	cout<<"\nMarks in Physics : "<<p_marks;
	cout<<"\nMarks in Chemistry : "<<c_marks;
	cout<<"\nMarks in Maths : "<<m_marks;
	cout<<"\nMarks in English : "<<e_marks;
	cout<<"\nMarks in Computer Science : "<<cs_marks;
	cout<<"\nPercentage of student is  : "<<per;
	cout<<"\nGrade of student is : "<<grade;
}

/* Here the test length is used as 15 as my name, ie., "Moinak Banerjee",
has 15 characters and it is used a check against all names for proper formatting */

void student::show_tabular()
{

	gotoxy(5,counter);
	counter++;
	cout<<rollno<<setw(6)<<name;
	if(strlen(name)==15)
	    cout<<setw(10);
	if(strlen(name)>15)
	    cout<<setw(10-(strlen(name)-15));
	if(strlen(name)<15)
	    cout<<setw(10+(15-strlen(name)));
	cout<<p_marks<<setw(4)<<c_marks<<setw(4)<<m_marks<<setw(4)
		<<e_marks<<setw(4)<<cs_marks<<setw(8)<<per<<setw(6)<<grade;
}

int  student::retrollno()
{
	return rollno;
}



//***************************************************************
//    	THE MAIN FUNCTION OF PROGRAM
//****************************************************************



int main()
{
	char ch;
	cout.setf(ios::fixed|ios::showpoint);
	cout<<setprecision(2); // program outputs decimal number to two decimal places
	clrscr();
	intro();
	do
	{
		clrscr();
		display();
		textcolor(RED);
		gotoxy(36,2);
		cout<<"MAIN MENU";
		gotoxy(7,7);
		cout<<"01. RESULT MENU";
		gotoxy(7,9);
		cout<<"02. ENTRY/EDIT MENU";
		gotoxy(7,11);
		cout<<"03. EXIT";
		gotoxy(7,15);
		cout<<"Please Select Your Option (1-3) : ";
		cin>>ch;
		clrscr();
		switch(ch)
		{
			case '1': result();
				break;
			case '2': entry_menu();
				break;
			case '3':
				break;
			default :cout<<"\a";
		}
	}while(ch!='3');
	return 0;
}

//***************************************************************
//    	function to write in file
//****************************************************************

void write_student()
{
	display();
	textcolor(RED);
	student st;
	ofstream outFile;
	outFile.open("student.dat",ios::binary|ios::app);
	st.getdata();
	outFile.write((char *) &st, sizeof(student));
	outFile.close();
	gotoxy(20,20);
	textcolor(RED);
	cout<<"Student record Has Been Created ! ";
	cin.ignore();
	getch();
}

//***************************************************************
//    	function to read all records from file
//****************************************************************

void display_all()
{
	display();
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}
	cout<<"\n\n\n\t\tDISPLAY ALL RECORD !!!\n\n";
	while(inFile.read((char *) &st, sizeof(student)))
	{
		st.showdata();
		cout<<"\n\n====================================\n";
	}
	inFile.close();
	getch();
}

//***************************************************************
//    	function to read specific record from file
//****************************************************************

void display_sp(int n)
{
	clrscr();
	display();
	textcolor(RED);
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}

	int flag=0;
	while(inFile.read((char *) &st, sizeof(student)))
	{
		if(st.retrollno()==n)
		{
			 st.showdata();
			 flag=1;
		}
	}
	inFile.close();
	if(flag==0)
		textcolor(RED);
		gotoxy(28,7);
		cout<<"record does not exist!";
	getch();
}

//***************************************************************
//    	function to modify record of file
//****************************************************************

void modify_student(int n)
{
	display();
	int found=0;
	student st;
	fstream File;
	File.open("student.dat",ios::binary|ios::in|ios::out);
	if(!File)
	{       textcolor(RED+BLINK);
		gotoxy(5,3);
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}
	while(File.read((char *) &st, sizeof(student)) && found==0)
	{
		if(st.retrollno()==n)
		{
			st.showdata();
			cout<<"\n\nPlease Enter The New Details of student :-\n"<<endl;
			st.getdata();
			int pos=(-1)*sizeof(st);
			File.seekp(pos,ios::cur);
			File.write((char *) &st, sizeof(student));
			cout<<"\n\n\t Record Updated ! ";
			found=1;
		}
	}
	File.close();
	if(found==0)
		clrscr();
		display();
		textcolor(RED);
		gotoxy(31,7);
		cout<<"Record Not Found! ";
	getch();
}

//***************************************************************
//    	function to delete record of file
//****************************************************************

void delete_student(int n)
{
	clrscr();
	display();
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{       gotoxy(5,3);
		textcolor(RED+BLINK);
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}
	ofstream outFile;
	outFile.open("Temp.dat",ios::out);
	inFile.seekg(0,ios::beg);
	while(inFile.read((char *) &st, sizeof(student)))
	{
		if(st.retrollno()!=n)
		{
			outFile.write((char *) &st, sizeof(student));
		}
	}
	outFile.close();
	inFile.close();
	remove("student.dat");
	rename("Temp.dat","student.dat");
	gotoxy(30,10);
	textcolor(RED);
	cout<<"Record Deleted...";
	getch();
}

//***************************************************************
//    	function to display all students grade report
//****************************************************************

void class_result()
{
	display();
	textcolor(RED);
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}
	gotoxy(31,6);
	cout<<"ALL STUDENTS RESULT \n\n";
	gotoxy(4,8);
	cout<<"===========================================================================\n";
	gotoxy(4,9);
	cout<<"R.No       Name                 P   C   M   E  CS   %age    Grade"<<endl;
	gotoxy(4,10);
	cout<<"===========================================================================\n";
	while(inFile.read((char *) &st, sizeof(student)))
	{
		st.show_tabular();
	}
	getch();
	inFile.close();
}

//***************************************************************
//    	function to display result menu
//****************************************************************

void result()
{
	clrscr();
	display();
	char ch;
	int rno;
	gotoxy(36,2);
	cout<<"RESULT MENU";
	gotoxy(7,6);
	cout<<"1. Class Result";
	gotoxy(7,8);
	cout<<"2. Student Report Card";
	gotoxy(7,10);
	cout<<"3. Back to Main Menu";
	gotoxy(7,15);
	cout<<"Enter Choice (1/2/3) : ";
	cin>>ch;
	clrscr();
	switch(ch)
	{
	case '1' :class_result(); break;
	case '2' :display();
		  textcolor(RED);
		  gotoxy(7,6);
		  cout<<"Enter Roll Number Of Student : ";
		  cin>>rno;
		  display_sp(rno); break;
	case '3' :break;
	default :cout<<"\a";
	}
}

