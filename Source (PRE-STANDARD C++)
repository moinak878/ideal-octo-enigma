	cout<<"   CONTINUE.... ";

	gotoxy(40,6);
	cout<<"THE DETAILS OF THE STUDENT ";
	for(int i=0;i<53;i++)
	 {
	  gotoxy(26+i,8);
	  cprintf("%c",196);
	  gotoxy(26+i,10);
	  cprintf("%c",196);
	  gotoxy(26+i,18);
	  cprintf("%c",196);
	}
	gotoxy(27,9);
	cout<<"Student's Name : "<<name;
	gotoxy(65,9);
	cout<<"Roll No : "<<rollno;
	gotoxy(27,11);
	cout<<"SUBJECT      "<<"ob. marks   " <<"full marks   "<<"pass marks";
	gotoxy(27,12);
	cout<<"=======      "<<"=========   " <<"==========   "<<"==========";
	gotoxy(27,13);
	cout<<"ENGLISH     | "<<e_marks<<setw(13)<<"100"<<setw(13)<<"33";
	gotoxy(27,14);
	cout<<"PHYSICS     | "<<p_marks<<setw(13)<<"100"<<setw(13)<<"33";
	gotoxy(27,15);
	cout<<"CHEMISTRY   | "<<c_marks<<setw(13)<<"100"<<setw(13)<<"33";
	gotoxy(27,16);
	cout<<"MATHEMATICS | "<<m_marks<<setw(13)<<"100"<<setw(13)<<"33";
	gotoxy(27,17);
	cout<<"COMPUTER    | "<<cs_marks<<setw(13)<<"100"<<setw(13)<<"33";
	gotoxy(27,20);
	cout<<"TOTAL : 500 ยบ ";
	gotoxy(40,20);
	cout<<"PERCENTAGE : "<<per<<" % ยบ";
	gotoxy(68,19);
	cout<<"STATUS";

	if(grade=='F')
	{
		gotoxy(66,20);
		cout<<"FAILED";
	}
	else
	{
		gotoxy(65,20);
		cout<<"PASSED,GRADE "<<grade;
	}

	getch();
}


/* Here the test length is used as 15 as my name, ie., "Moinak Banerjee",
has 15 characters and it is used a check against all names for proper formatting */

void student::show_tabular()
{

	gotoxy(6,counter);
	counter++;
	cout<<rollno<<setw(6)<<"  "<<name;
	if(strlen(name)==15)
	    cout<<setw(10);
	if(strlen(name)>15)
	    cout<<setw(10-(strlen(name)-15));
	if(strlen(name)<15)
	    cout<<setw(10+(15-strlen(name)));
	cout<<p_marks<<setw(4)<<c_marks<<setw(4)<<m_marks<<setw(4)
		<<e_marks<<setw(4)<<cs_marks<<setw(8)<<per<<setw(5)<<" "<<grade;
}

int  student::retrollno()
{
	return rollno;
}



//***************************************************************
//    	THE MAIN FUNCTION OF PROGRAM
//****************************************************************



int main()
{
	char ch;
	cout.setf(ios::fixed|ios::showpoint);
	cout<<setprecision(2); // program outputs decimal number to two decimal places
	clrscr();
	intro();
	do
	{
		clrscr();
		display();
		textcolor(RED);
		gotoxy(36,2);
		cout<<"MAIN MENU";
		gotoxy(7,7);
		cout<<"01. RESULT MENU";
		gotoxy(7,9);
		cout<<"02. ENTRY/EDIT MENU";
		gotoxy(7,11);
		cout<<"03. EXIT";
		gotoxy(7,15);
		cout<<"Please Select Your Option (1-3) : ";
		cin>>ch;
		clrscr();
		switch(ch)
		{
			case '1': result();
				break;
			case '2': entry_menu();
				break;
			case '3':
				break;
			default :cout<<"\a";
		}
	}while(ch!='3');
	return 0;
}

//***************************************************************
//    	function to write in file
//****************************************************************

void write_student()
{
	display();
	textcolor(RED);
	student st;
	ofstream outFile;
	outFile.open("student.dat",ios::binary|ios::app);
	st.getdata();
	outFile.write((char *) &st, sizeof(student));
	outFile.close();
	gotoxy(20,20);
	textcolor(RED);
	cout<<"Student record Has Been Created ! ";
	cin.ignore();
	getch();
}

//***************************************************************
//    	function to read all records from file
//****************************************************************

void display_all()
{
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{       gotoxy(5,3);
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}

	while(inFile.read((char *) &st, sizeof(student)))
	{
		st.showdata();

	}
	inFile.close();
	getch();
}




//***************************************************************
//    	function to read specific record from file
//****************************************************************

void display_sp(int n)
{
	clrscr();
	display();
	textcolor(RED);
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}

	int flag=0;
	while(inFile.read((char *) &st, sizeof(student)))
	{
		if(st.retrollno()==n)
		{
			 st.showdata();
			 flag=1;
		}
	}
	inFile.close();
	if(flag==0)
	      {
			textcolor(RED);
			gotoxy(28,7);
			cout<<"record does not exist!";
	      }
	getch();
}

//***************************************************************
//    	function to modify record of file
//****************************************************************

void modify_student(int n)
{
	display();
	int found=0;
	student st;
	fstream File;
	File.open("student.dat",ios::binary|ios::in|ios::out);
	if(!File)
	{       textcolor(RED+BLINK);
		gotoxy(5,3);
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}
	while(File.read((char *) &st, sizeof(student)) && found==0)
	{
		if(st.retrollno()==n)
		{
			st.showdata();
			cout<<"\n\nPlease Enter The New Details of student :-\n"<<endl;
			st.getdata();
			int pos=(-1)*sizeof(st);
			File.seekp(pos,ios::cur);
			File.write((char *) &st, sizeof(student));
			clrscr();
			display();
			textcolor(RED);
			gotoxy(31,7);
			cout<<"      Record Updated ! ";
			found=1;
		}
	}
	File.close();
	if(found==0)
		{
		clrscr();
		display();
		textcolor(RED);
		gotoxy(31,7);
		cout<<"Record Not Found! ";
		}
	getch();
}

//***************************************************************
//    	function to delete record of file
//****************************************************************

void delete_student(int n)
{
	clrscr();
	display();
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{       gotoxy(5,3);
		textcolor(RED+BLINK);
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}
	ofstream outFile;
	outFile.open("Temp.dat",ios::out);
	inFile.seekg(0,ios::beg);
	while(inFile.read((char *) &st, sizeof(student)))
	{
		if(st.retrollno()!=n)
		{
			outFile.write((char *) &st, sizeof(student));
		}
	}
	outFile.close();
	inFile.close();
	remove("student.dat");
	rename("Temp.dat","student.dat");
	gotoxy(30,10);
	textcolor(RED);
	cout<<"Record Deleted...";
	getch();
}

//***************************************************************
//    	function to display all students grade report
//****************************************************************

void class_result()
{
	display();
	textcolor(RED);
	student st;
	ifstream inFile;
	inFile.open("student.dat",ios::binary);
	if(!inFile)
	{
		cout<<"File could not be opened !! Press any Key...";
		getch();
		return;
	}
	gotoxy(31,6);
	cout<<"ALL STUDENTS RESULT \n\n";
	gotoxy(4,8);
	cout<<"===========================================================================\n";
	gotoxy(4,9);
	cout<<"R.No       Name                 P   C   M   E  CS   %age    Grade"<<endl;
	gotoxy(4,10);
	cout<<"===========================================================================\n";
	while(inFile.read((char *) &st, sizeof(student)))
	{
		st.show_tabular();
	}
	getch();
	inFile.close();
}

//***************************************************************
//    	function to display result menu
//****************************************************************

void result()
{
	clrscr();
	display();
	char ch;
	int rno;
	gotoxy(36,2);
	cout<<"RESULT MENU";
	gotoxy(7,6);
	cout<<"1. Class Result";
	gotoxy(7,8);
	cout<<"2. Student Report Card";
	gotoxy(7,10);
	cout<<"3. Back to Main Menu";
	gotoxy(7,15);
	cout<<"Enter Choice (1/2/3) : ";
	cin>>ch;
	clrscr();
	switch(ch)
	{
	case '1' :class_result(); break;
	case '2' :display();
		  textcolor(RED);
		  gotoxy(7,6);
		  cout<<"Enter Roll Number Of Student : ";
		  cin>>rno;
		  display_sp(rno); break;
	case '3' :break;
	default :cout<<"\a";
	}
}

