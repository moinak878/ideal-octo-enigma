int display()          // prints the main frame
 {
  clrscr();
	int i;


	textcolor(RED);

	  for(i=1;i<24;i++)
	  {
	 if(i==1)
		 {
	  gotoxy(2,3+i);
	  cprintf("%c",201);
		 }
	       else
	  if(i==22)
	  {
		 gotoxy(2,3+i);
		 cprintf("%c",200);
	  }

		 else

	 {
	 gotoxy(2,3+i);
	 cprintf("ยบ");
	 }
	  }

		for(i=1;i<23;i++)
	  {
		 if(i==1)
		 {
	  gotoxy(80,3+i);
	  cprintf("%c",187);
		 }
		 else
	if(i==22)
	  {
		 gotoxy(79,3+i);
		 cprintf("e%c",188);
	  }

		 else
	 {
	 gotoxy(80,3+i);
	 cprintf("ยบ");
	 }
		}
		_setcursortype(_NOCURSOR);


		textcolor(10);

		gotoxy(4,23);
		cprintf("%s",__DATE__);
		gotoxy(6,23);
		textcolor(7);
		textcolor(RED);
		 for(i=3;i<80;i++)
	{
	  gotoxy(i,3);
	  cprintf("%c",205);
	}



	 for(i=3;i<80;i++)
	{
		gotoxy(i,24);
		cprintf("%c",205);
	}


 }
