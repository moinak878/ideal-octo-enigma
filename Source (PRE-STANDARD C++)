//***************************************************************
//    	ENTRY / EDIT MENU FUNCTION
//****************************************************************

void entry_menu()
{
	clrscr();
	display();
	textcolor(7);
	textcolor(RED);
	char ch;
	int num;
	gotoxy(36,2);
	cout<<"ENTRY MENU";
	gotoxy(7,7);
	cout<<"1.CREATE STUDENT RECORD";
	gotoxy(7,9);
	cout<<"2.DISPLAY ALL STUDENTS RECORDS";
	gotoxy(7,11);
	cout<<"3.SEARCH STUDENT RECORD ";
	gotoxy(7,13);
	cout<<"4.MODIFY STUDENT RECORD";
	gotoxy(7,15);
	cout<<"5.DELETE STUDENT RECORD";
	gotoxy(7,17);
	cout<<"6.BACK TO MAIN MENU";
	gotoxy(7,20);
	cout<<"Please Enter Your Choice (1-6) : ";
	cin>>ch;
	clrscr();
	switch(ch)
	{
	case '1':	write_student(); break;
	case '2':	display_all(); break;
	case '3':       display();
			textcolor(RED);
			gotoxy(7,6);
			cout<<"Please Enter The roll number : "; cin>>num;
			display_sp(num); break;
	case '4':       display();
			textcolor(RED);
			gotoxy(7,6);
			cout<<"Please Enter The roll number : "; cin>>num;
			modify_student(num);break;
	case '5':       display();
			textcolor(RED);
			gotoxy(7,6);
			cout<<"Please Enter The roll number : "; cin>>num;
			delete_student(num);break;
	case '6':	break;
	default:	cout<<"\a"; entry_menu();
	}
}


